{% extends '_layouts/base.njk' %}

{% block content %}
<article class="container">
  <div class="row">
    <div class="col-sm-4">
      <img class="img-fluid member-photo" src="img/members/{{ members.image }}">
    </div>
    <div class="col-sm-8">
        <h1 class="title">{{ members.name }}</h1>
        <h5>{{ members.tenure }}</h5>
        <h5>{{ members.instruments }}</h5>
        <p>{{ members.text | safe}} </p>
    </div>
  </div>
      {% block story %}{% endblock %}

</article>
{% endblock %}
